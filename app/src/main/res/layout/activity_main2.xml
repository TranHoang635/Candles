<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/imageFilterView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EEE9E5"
        app:srcCompat="@drawable/tarotbackground1"
        tools:ignore="MissingConstraints"></androidx.constraintlayout.utils.widget.ImageFilterView>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="406dp"
        android:layout_height="455dp"
        android:layout_marginBottom="228dp"
        android:src="@drawable/trc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_Chon"
        android:layout_width="173dp"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:background="#BFB099"
        android:text="Rút ngẫu nhiên"
        app:layout_constraintBottom_toTopOf="@+id/btnRut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gifImageView"
        app:layout_constraintVertical_bias="0.621" />

    <Button
        android:id="@+id/btnRut"
        android:layout_width="182dp"
        android:layout_height="61dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#BFB099"
        android:onClick="btnRut"
        android:text="Rút một lá bài"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="©candles_team"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>